@model Reports.Models.CustomerParamsModel

@{
    ViewBag.Title = "Customer Lookup";
}

<style>
    #ui-datepicker-div
    {
        background-color:#cccccc;
        border:1px solid black;
    }
</style>

<script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.date').datepicker({ dateFormat: "mm/dd/yy" });
    });
</script>

Enter one or more values. The first 100 customers matching all your entries will be displayed.<br />
For email and name, you may enter just the first few letters if you wish.<br />
Don't forget that, on the test server, emails and names are sanitized, and there may be few customers for recent dates.<br />
<br />

@using (Html.BeginForm("lookupresults", "customers", FormMethod.Post)) {
    @Html.ValidationSummary()

    @Html.LabelFor(modelItem => @Model.CustomerID) @Html.TextBoxFor(modelItem => @Model.CustomerID)<br />
    @Html.LabelFor(modelItem => @Model.Date) @Html.TextBoxFor(modelItem => @Model.Date, new { @class = "date" })<br />
    @Html.LabelFor(modelItem => @Model.LoginEmail) @Html.TextBoxFor(modelItem => @Model.LoginEmail)<br />
    @Html.LabelFor(modelItem => @Model.LastName) @Html.TextBoxFor(modelItem => @Model.LastName)<br />
    <input type="submit" />
}

<br />
<br />
@Html.ActionLink("Back", "") @Html.ActionLink("Home", "", "home")