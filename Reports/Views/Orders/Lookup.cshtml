@model Reports.Models.OrderParamsModel

@{
    ViewBag.Title = "Order Lookup";
}

<style>
    #ui-datepicker-div
    {
        background-color:#cccccc;
        border:1px solid black;
    }
</style>

<script src="/scripts/jquery-1.6.2.js" type="text/javascript"></script>
<script src="/scripts/jquery-ui-1.8.11.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.date').datepicker({ dateFormat: "mm/dd/yy" });
    });
</script>

@using (Html.BeginForm("lookupresults", "orders")) {
    //@Html.EditorForModel()
    @Html.LabelFor(modelItem => @Model.OrderID) @Html.TextBoxFor(modelItem => @Model.OrderID)<br />
    @Html.LabelFor(modelItem => @Model.Date) @Html.TextBoxFor(modelItem => @Model.Date, new { @class="date" })<br />
    @Html.LabelFor(modelItem => @Model.LoginEmail) @Html.TextBoxFor(modelItem => @Model.LoginEmail)<br />
    @Html.LabelFor(modelItem => @Model.LastName) @Html.TextBoxFor(modelItem => @Model.LastName)<br />
    <input type="submit" />
}

<br />
<br />
@Html.ActionLink("Back", "") @Html.ActionLink("Home", "", "home")