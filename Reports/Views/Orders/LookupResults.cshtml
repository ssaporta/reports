@model List<Reports.Models.OrderModel>

@{
    ViewBag.Title = "Order Lookup Results";
}

@if (Model.Count == 100)
{
    @Html.Raw("Only the first 100 matching orders are shown.<br /><br />");
}
@if (Model.Count == 0) {
    @Html.Raw("No order found.");
}
<table>
@foreach (Reports.Models.OrderModel orderModel in Model)
{
    <tr><td>@orderModel.OrderID</td><td>@orderModel.OrderTotal</td><td>@orderModel.PaymentMethod</td><td>@orderModel.FName</td><td>@orderModel.LName</td></tr>
}
</table>
<br />
<br />
@Html.ActionLink("Back", "lookup") @Html.ActionLink("Home", "", "home")